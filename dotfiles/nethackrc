# Set some convenient settings
OPTIONS=autodig,color,fruit:FRUIT,time

# set boulder display
SYMBOLS=S_boulder:0

# Set random selection
# OPTIONS=align:random,role:random,race:random,gender:random

# Show XP
OPTIONS=showexp

# Auto pickup settings
OPTIONS=autopickup
# Pickup only gold, scrolls, potions, wands, spellbooks, rings, amulets
OPTIONS=pickup_types:$?!/+="
# Warn if picking up would lead to emburdenment
OPTIONS=pickup_burden:unencumbered

# Set colors in menu
OPTIONS=menucolors
MENUCOLOR=" blessed "=green
MENUCOLOR=" holy "=green
MENUCOLOR=" cursed "=red
MENUCOLOR=" unholy "=red
MENUCOLOR=" cursed .* (being worn)"=orange&underline

